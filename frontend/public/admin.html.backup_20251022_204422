        // ===== ÏãúÏä§ÌÖú ÏÑ§Ï†ï Í¥ÄÎ†® Ìï®Ïàò =====

        // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú ÏãúÏä§ÌÖú ÏÑ§Ï†ï Î∂àÎü¨Ïò§Í∏∞
        async function loadSystemSettings() {
            try {
                const token = localStorage.getItem('access_token') ||
                             (localStorage.getItem('userInfo') ? JSON.parse(localStorage.getItem('userInfo')).access_token : null);

                if (!token) {
                    console.error('Ïù∏Ï¶ù ÌÜ†ÌÅ∞Ïù¥ ÏóÜÏäµÎãàÎã§');
                    return;
                }

                const API_BASE = 'http://localhost:8000';
                const response = await fetch(`${API_BASE}/api/admin/settings?category=translation`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.ok) {
                    const settings = await response.json();

                    // Î≤àÏó≠ Ï†úÍ≥µÏûê ÏÑ§Ï†ï
                    const providerSetting = settings.find(s => s.key === 'translation_provider');
                    if (providerSetting) {
                        document.getElementById('translationProvider').value = providerSetting.value;
                    }

                    // DeepL API Key ÏÑ§Ï†ï
                    const deeplKeySetting = settings.find(s => s.key === 'deepl_api_key');
                    if (deeplKeySetting) {
                        document.getElementById('deeplApiKey').value = deeplKeySetting.value;
                    }
                } else {
                    console.error('ÏÑ§Ï†ï Î∂àÎü¨Ïò§Í∏∞ Ïã§Ìå®:', response.status);
                }
            } catch (error) {
                console.error('ÏÑ§Ï†ï Î∂àÎü¨Ïò§Í∏∞ Ïò§Î•ò:', error);
            }
        }

        // DeepL ÏÑ§Ï†ï Ï†ÄÏû•
        async function saveDeepLSettings() {
            const apiKey = document.getElementById('deeplApiKey').value.trim();
            const provider = document.getElementById('translationProvider').value;

            if (!apiKey) {
                alert('DeepL API KeyÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }

            try {
                const token = localStorage.getItem('access_token') ||
                             (localStorage.getItem('userInfo') ? JSON.parse(localStorage.getItem('userInfo')).access_token : null);

                if (!token) {
                    alert('Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§.');
                    return;
                }

                const API_BASE = 'http://localhost:8000';

                // DeepL API Key Ï†ÄÏû•
                const deeplResponse = await fetch(`${API_BASE}/api/admin/settings/deepl_api_key`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ value: apiKey })
                });

                // Translation Provider Ï†ÄÏû•
                const providerResponse = await fetch(`${API_BASE}/api/admin/settings/translation_provider`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ value: provider })
                });

                if (deeplResponse.ok && providerResponse.ok) {
                    const statusDiv = document.getElementById('deeplStatus');
                    statusDiv.style.display = 'block';
                    statusDiv.style.background = '#d4edda';
                    statusDiv.style.color = '#155724';
                    statusDiv.style.border = '1px solid #c3e6cb';
                    statusDiv.innerHTML = '‚úÖ DeepL ÏÑ§Ï†ïÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Ï†ÄÏû•ÎêòÏóàÏäµÎãàÎã§!';

                    setTimeout(() => {
                        statusDiv.style.display = 'none';
                    }, 3000);
                } else {
                    throw new Error('ÏÑ§Ï†ï Ï†ÄÏû• Ïã§Ìå®');
                }
            } catch (error) {
                console.error('ÏÑ§Ï†ï Ï†ÄÏû• Ïò§Î•ò:', error);
                const statusDiv = document.getElementById('deeplStatus');
                statusDiv.style.display = 'block';
                statusDiv.style.background = '#f8d7da';
                statusDiv.style.color = '#721c24';
                statusDiv.style.border = '1px solid #f5c6cb';
                statusDiv.innerHTML = '‚ùå ÏÑ§Ï†ï Ï†ÄÏû•Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§: ' + error.message;
            }
        }

        // DeepL Ïó∞Í≤∞ ÌÖåÏä§Ìä∏
        async function testDeepLConnection() {
            const apiKey = document.getElementById('deeplApiKey').value.trim();

            if (!apiKey) {
                alert('DeepL API KeyÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }

            // Î®ºÏ†Ä Ï†ÄÏû•
            await saveDeepLSettings();

            const statusDiv = document.getElementById('deeplStatus');
            statusDiv.style.display = 'block';
            statusDiv.style.background = '#d1ecf1';
            statusDiv.style.color = '#0c5460';
            statusDiv.style.border = '1px solid #bee5eb';
            statusDiv.innerHTML = 'üîÑ DeepL API Ïó∞Í≤∞ÏùÑ ÌÖåÏä§Ìä∏ÌïòÎäî Ï§ë...';

            const API_BASE = 'http://localhost:8000';
            const token = localStorage.getItem('access_token') ||
                         (localStorage.getItem('userInfo') ? JSON.parse(localStorage.getItem('userInfo')).access_token : null);

            if (!token) {
                statusDiv.style.background = '#f8d7da';
                statusDiv.style.color = '#721c24';
                statusDiv.style.border = '1px solid #f5c6cb';
                statusDiv.innerHTML = '‚ùå Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§.';
                return;
            }

            try {
                // Î∞±ÏóîÎìú APIÎ•º ÌÜµÌï¥ ÌÖåÏä§Ìä∏
                const response = await fetch(`${API_BASE}/api/admin/test-deepl`, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    statusDiv.style.background = '#d4edda';
                    statusDiv.style.color = '#155724';
                    statusDiv.style.border = '1px solid #c3e6cb';
                    statusDiv.innerHTML = `‚úÖ DeepL API Ïó∞Í≤∞ ÏÑ±Í≥µ!<br>ÌÖåÏä§Ìä∏ Î≤àÏó≠: "${data.test_translation.original}" ‚Üí "${data.test_translation.translated}"`;
                } else if (response.status === 403) {
                    statusDiv.style.background = '#f8d7da';
                    statusDiv.style.color = '#721c24';
                    statusDiv.style.border = '1px solid #f5c6cb';
                    statusDiv.innerHTML = '‚ùå API KeyÍ∞Ä Ïú†Ìö®ÌïòÏßÄ ÏïäÏäµÎãàÎã§. DeepL Pro API KeyÎ•º ÌôïÏù∏Ìï¥Ï£ºÏÑ∏Ïöî.';
                } else {
                    const errorData = await response.json();
                    statusDiv.style.background = '#f8d7da';
                    statusDiv.style.color = '#721c24';
                    statusDiv.style.border = '1px solid #f5c6cb';
                    statusDiv.innerHTML = `‚ùå DeepL API Ïò§Î•ò (${response.status}): ${errorData.detail || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•ò'}`;
                }
            } catch (error) {
                statusDiv.style.background = '#f8d7da';
                statusDiv.style.color = '#721c24';
                statusDiv.style.border = '1px solid #f5c6cb';
                statusDiv.innerHTML = '‚ùå Ïó∞Í≤∞ Ïã§Ìå®: ' + error.message;
            }
        }

        // ÏãúÏä§ÌÖú ÏÑ§Ï†ï ÌÉ≠ ÌëúÏãú Ïãú ÏÑ§Ï†ï Î°úÎìú
        const originalShowTab = showTab;
        showTab = function(tabId) {
            originalShowTab(tabId);
            if (tabId === 'system-settings') {
                loadSystemSettings();
            }
        };
    </script>
</body>
</html>
