        }

        // Ïã†Í≥† Î¨¥Ïãú
        function handleIgnoreReport(id, type) {
            const typeName = type === 'post' ? 'Í≤åÏãúÍ∏Ä' : 'ÎåìÍ∏Ä';
            if (confirm(`${typeName} #${id}Ïùò Ïã†Í≥†Î•º Î¨¥ÏãúÌïòÏãúÍ≤†ÏäµÎãàÍπå?\nÎ¨¥ÏãúÎêú Ïã†Í≥†Îäî Îçî Ïù¥ÏÉÅ ÌëúÏãúÎêòÏßÄ ÏïäÏäµÎãàÎã§.`)) {
                alert(`${typeName} #${id}Ïùò Ïã†Í≥†Í∞Ä Î¨¥ÏãúÎêòÏóàÏäµÎãàÎã§.`);
                // Ïã§Ï†úÎ°úÎäî API Ìò∏Ï∂úÌïòÏó¨ Ïã†Í≥† Î¨¥Ïãú Ï≤òÎ¶¨
                location.reload();
            }
        }

        // Í≤åÏãúÍ∏Ä Î≥µÍµ¨
        function handleRestorePost(postId) {
