    <script>
        // Í¥ÄÎ¶¨Ïûê Í∂åÌïú ÌôïÏù∏ Î∞è Ïö¥ÏòÅÏûê Ïó∞ÎùΩ Î°úÎìú
        window.addEventListener('DOMContentLoaded', function() {
            const userInfoStr = localStorage.getItem('userInfo');

            if (!userInfoStr) {
                alert('Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§.');
                window.location.href = '/login.html';
                return;
            }

            try {
                const userInfo = JSON.parse(userInfoStr);
                if (!userInfo.isAdmin) {
                    alert('Í¥ÄÎ¶¨Ïûê Í∂åÌïúÏù¥ ÌïÑÏöîÌï©ÎãàÎã§.');
                    window.location.href = '/index.html';
                    return;
                }

                // Ïö¥ÏòÅÏûê Ïó∞ÎùΩ Îç∞Ïù¥ÌÑ∞ Î°úÎìú
                loadContactRequests();
            } catch (e) {
                console.error('ÏÇ¨Ïö©Ïûê Ï†ïÎ≥¥ ÌååÏã± Ïò§Î•ò:', e);
                alert('Î°úÍ∑∏Ïù∏ Ï†ïÎ≥¥Í∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§.');
                window.location.href = '/login.html';
            }
        });

        // Ïö¥ÏòÅÏûê Ïó∞ÎùΩ Îç∞Ïù¥ÌÑ∞ Î°úÎìú
        function loadContactRequests() {
            const contacts = JSON.parse(localStorage.getItem('adminContacts') || '[]');
            const tableBody = document.getElementById('contactRequestsTable');
            const noDataDiv = document.getElementById('noContactRequests');

            if (contacts.length === 0) {
                noDataDiv.style.display = 'block';
                return;
            }

            noDataDiv.style.display = 'none';

            tableBody.innerHTML = contacts.map((contact, index) => {
                const typeLabel = contact.type === 'ad' ? 'Í¥ëÍ≥†/ÌòëÎ†•' : 'Í±¥Ïùò';
                const typeBadge = contact.type === 'ad' ? 'badge-reported' : 'badge-normal';

                // ÏöîÏ≤≠ Ïú†Ìòï Î≤àÏó≠
                const requestTypeMap = {
                    // Í¥ëÍ≥†/ÌòëÎ†• ÏöîÏ≤≠ Ïú†Ìòï
                    'banner': 'Î∞∞ÎÑà Í¥ëÍ≥†',
                    'content': 'ÏΩòÌÖêÏ∏† ÌòëÏ∞¨',
                    'partnership': 'ÎπÑÏ¶àÎãàÏä§ Ï†úÌú¥',
                    'event': 'Ïù¥Î≤§Ìä∏ ÌòëÎ†•',
                    // Í±¥Ïùò Ïú†Ìòï
                    'improvement': 'ÏÑúÎπÑÏä§ Í∞úÏÑ†',
                    'feature': 'Í∏∞Îä• Ï∂îÍ∞Ä',
                    'bug': 'Î≤ÑÍ∑∏ Ïã†Í≥†',
                    'complaint': 'Î∂àÌé∏ ÏÇ¨Ìï≠',
                    'question': 'ÏßàÎ¨∏',
                    'other': 'Í∏∞ÌÉÄ'
                };

                const requestType = contact.requestType || contact.suggestType || 'other';
                const requestTypeLabel = requestTypeMap[requestType] || 'Í∏∞ÌÉÄ';

                const date = new Date(contact.timestamp);
                const dateStr = date.toLocaleString('ko-KR', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                return `
                    <tr>
                        <td><span class="status-badge ${typeBadge}">${typeLabel}</span></td>
                        <td><strong>${contact.title || '-'}</strong></td>
                        <td>${contact.name || '-'}</td>
                        <td>${dateStr}</td>
                        <td style="white-space: nowrap;">
                            <button class="action-btn" onclick="viewContactDetail(${index})">ÏÉÅÏÑ∏Î≥¥Í∏∞</button>
                            <button class="action-btn btn-delete" onclick="deleteContactRequest(${index})">ÏÇ≠Ï†ú</button>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Ïó∞ÎùΩ ÏÉÅÏÑ∏Î≥¥Í∏∞
        function viewContactDetail(index) {
            const contacts = JSON.parse(localStorage.getItem('adminContacts') || '[]');
            const contact = contacts[index];

            if (!contact) {
                alert('Îç∞Ïù¥ÌÑ∞Î•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§.');
                return;
            }

            const typeLabel = contact.type === 'ad' ? 'Í¥ëÍ≥†/ÌòëÎ†• ÏöîÏ≤≠' : 'Ïö¥ÏòÅÏûê Í±¥Ïùò';
            const requestTypeMap = {
                'banner': 'Î∞∞ÎÑà Í¥ëÍ≥†',
                'content': 'ÏΩòÌÖêÏ∏† ÌòëÏ∞¨',
                'partnership': 'ÎπÑÏ¶àÎãàÏä§ Ï†úÌú¥',
                'event': 'Ïù¥Î≤§Ìä∏ ÌòëÎ†•',
                'improvement': 'ÏÑúÎπÑÏä§ Í∞úÏÑ†',
                'feature': 'Í∏∞Îä• Ï∂îÍ∞Ä',
                'bug': 'Î≤ÑÍ∑∏ Ïã†Í≥†',
                'complaint': 'Î∂àÌé∏ ÏÇ¨Ìï≠',
                'question': 'ÏßàÎ¨∏',
                'other': 'Í∏∞ÌÉÄ'
            };
            const requestType = contact.requestType || contact.suggestType || 'other';
            const requestTypeLabel = requestTypeMap[requestType] || 'Í∏∞ÌÉÄ';

            document.getElementById('modalTitle').textContent = typeLabel;

            let modalHTML = `
                <div class="detail-row">
                    <div class="detail-label">üë§ Ïù¥Î¶Ñ</div>
                    <div class="detail-value">${contact.name || '-'}</div>
                </div>
            `;

            if (contact.company) {
                modalHTML += `
                    <div class="detail-row">
                        <div class="detail-label">üè¢ ÌöåÏÇ¨Î™Ö</div>
                        <div class="detail-value">${contact.company}</div>
                    </div>
                `;
            }

            modalHTML += `
                <div class="detail-row">
                    <div class="detail-label">üìß Ïù¥Î©îÏùº</div>
                    <div class="detail-value">${contact.email || '-'}</div>
                </div>
            `;

            if (contact.phone) {
                modalHTML += `
                    <div class="detail-row">
                        <div class="detail-label">üìû Ïó∞ÎùΩÏ≤ò</div>
                        <div class="detail-value">${contact.phone}</div>
                    </div>
                `;
            }

            modalHTML += `
                <div class="detail-row">
                    <div class="detail-label">üìÇ ÏöîÏ≤≠ Ïú†Ìòï</div>
                    <div class="detail-value">${requestTypeLabel}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">üìå Ï†úÎ™©</div>
                    <div class="detail-value"><strong>${contact.title || '-'}</strong></div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">üìù ÏÉÅÏÑ∏ ÎÇ¥Ïö©</div>
                    <div class="detail-content">${contact.content || '-'}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">üïê Ï†ëÏàò ÏùºÏãú</div>
                    <div class="detail-value">${new Date(contact.timestamp).toLocaleString('ko-KR', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    })}</div>
                </div>
            `;

            document.getElementById('modalBody').innerHTML = modalHTML;
            document.getElementById('contactModal').classList.add('show');
        }

        // Î™®Îã¨ Îã´Í∏∞
        function closeContactModal() {
            document.getElementById('contactModal').classList.remove('show');
        }

        // Î™®Îã¨ Î∞∞Í≤Ω ÌÅ¥Î¶≠Ïãú Îã´Í∏∞
        document.addEventListener('click', function(e) {
            if (e.target.id === 'contactModal') {
                closeContactModal();
            }
        });

        // Ïó∞ÎùΩ ÏÇ≠Ï†ú
        function deleteContactRequest(index) {
            if (confirm('Ïù¥ Ïó∞ÎùΩÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
                const contacts = JSON.parse(localStorage.getItem('adminContacts') || '[]');
                contacts.splice(index, 1);
                localStorage.setItem('adminContacts', JSON.stringify(contacts));
                alert('ÏÇ≠Ï†úÎêòÏóàÏäµÎãàÎã§.');
                loadContactRequests();
            }
        }

        // ÌÉ≠ Ï†ÑÌôò
        function showTab(tabId) {
            // Î™®Îì† ÌÉ≠ Î≤ÑÌäºÍ≥º ÏΩòÌÖêÏ∏† ÎπÑÌôúÏÑ±Ìôî
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

            // ÏÑ†ÌÉùÎêú ÌÉ≠ ÌôúÏÑ±Ìôî
            event.target.classList.add('active');
            document.getElementById(tabId).classList.add('active');
        }

        // Í≤åÏãúÍ∏Ä ÏÇ≠Ï†ú
        function handleDeletePost(postId) {
            if (confirm(`Í≤åÏãúÍ∏Ä #${postId}ÏùÑ(Î•º) ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?\nÏÇ≠Ï†úÎêú Í≤åÏãúÍ∏ÄÏùÄ "ÏÇ≠Ï†úÎêú Í≤åÏãúÍ∏Ä" ÌÉ≠ÏóêÏÑú Í¥ÄÎ¶¨Ìï† Ïàò ÏûàÏäµÎãàÎã§.`)) {
                alert(`Í≤åÏãúÍ∏Ä #${postId}Ïù¥(Í∞Ä) ÏÇ≠Ï†úÎêòÏóàÏäµÎãàÎã§.`);
                // Ïã§Ï†úÎ°úÎäî API Ìò∏Ï∂úÌïòÏó¨ ÏÇ≠Ï†ú Ï≤òÎ¶¨
                // ÏÇ≠Ï†ú ÌõÑ Ìï¥Îãπ ÌñâÏùÑ "ÏÇ≠Ï†úÎêú Í≤åÏãúÍ∏Ä" ÌÉ≠ÏúºÎ°ú Ïù¥Îèô
                location.reload();
            }
        }

        // ÎåìÍ∏Ä ÏÇ≠Ï†ú
        function handleDeleteComment(commentId) {
            if (confirm(`ÎåìÍ∏Ä #${commentId}ÏùÑ(Î•º) ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?\nÏÇ≠Ï†úÎêú ÎåìÍ∏ÄÏùÄ "ÏÇ≠Ï†úÎêú ÎåìÍ∏Ä" ÌÉ≠ÏóêÏÑú Í¥ÄÎ¶¨Ìï† Ïàò ÏûàÏäµÎãàÎã§.`)) {
